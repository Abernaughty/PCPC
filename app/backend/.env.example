# PCPC Backend Environment Configuration Template
# Copy this file to .env and update with your actual values

# Build Environment
NODE_ENV=development

# Azure Functions Configuration
FUNCTIONS_WORKER_RUNTIME=node
FUNCTIONS_EXTENSION_VERSION=~4
AzureWebJobsStorage=UseDevelopmentStorage=true

# Cosmos DB Configuration
COSMOS_DB_CONNECTION_STRING=your-cosmos-db-connection-string-here
COSMOS_DB_DATABASE_NAME=pokedata
COSMOS_DB_CONTAINER_NAME=cards

# Pokemon TCG API Configuration
POKEMON_TCG_API_KEY=your-pokemon-tcg-api-key-here
POKEMON_TCG_BASE_URL=https://api.pokemontcg.io/v2

# PokeData API Configuration
POKEDATA_API_BASE_URL=https://www.pokedata.io/v0
POKEDATA_API_KEY=your-pokedata-api-key-here

# Redis Cache Configuration (optional)
REDIS_CONNECTION_STRING=your-redis-connection-string-here
REDIS_CACHE_ENABLED=false

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string-here
AZURE_STORAGE_CONTAINER_NAME=images

# API Management Configuration
APIM_SUBSCRIPTION_KEY=your-apim-subscription-key-here
APIM_BASE_URL=https://your-apim-instance.azure-api.net

# Monitoring and Logging
# Application Insights Configuration (Phase 4.2.2 Backend Monitoring)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/;LiveEndpoint=https://your-region.livediagnostics.monitor.azure.com/
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key-here
APPLICATIONINSIGHTS_ROLE_NAME=pcpc-backend
APPLICATIONINSIGHTS_SAMPLING_PERCENTAGE=100
AZURE_FUNCTIONS_ENVIRONMENT=development
APP_VERSION=1.8.1

# Credit Monitoring
CREDIT_MONITORING_ENABLED=true
CREDIT_THRESHOLD_WARNING=1000
CREDIT_THRESHOLD_CRITICAL=100

# Feature Flags
ENABLE_CACHING=true
ENABLE_IMAGE_ENHANCEMENT=true
ENABLE_CREDIT_MONITORING=true
DEBUG_MODE=false
