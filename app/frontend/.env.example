# PCPC Frontend Environment Configuration - Local Testing
# Generated for Phase 3.1.2 Frontend Build & Runtime Testing

# Build Environment
NODE_ENV=development

# API Management Configuration (for production - not used when USE_API_MANAGEMENT=false)
APIM_BASE_URL=https://pokedata-apim-dev.azure-api.net/pokedata-api
APIM_SUBSCRIPTION_KEY=your_apim_subscription_key_here

# Azure Functions Configuration (LOCAL TESTING - used when USE_API_MANAGEMENT=false)
AZURE_FUNCTIONS_BASE_URL=http://localhost:7071/api
AZURE_FUNCTION_KEY=your_azure_function_key_here

# Feature Flags
USE_API_MANAGEMENT=false
DEBUG_API=true

# Development Server
PORT=3000

# Active API Configuration (LOCAL for testing - this is the main one used)
API_BASE_URL=http://localhost:7071/api

# Application Insights Configuration (Frontend Monitoring - Phase 4.2.8)
# Leave connection string empty to disable monitoring (app will work fine with graceful degradation)
# To enable monitoring, get connection string from Azure Application Insights resource
VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=
VITE_APPLICATIONINSIGHTS_ROLE_NAME=pcpc-frontend
VITE_APP_VERSION=0.2.0
VITE_ENVIRONMENT=development
